@model SabesQueAcha.Models.Usuario

@if (TempData["UsuarioCadastrado"] != null)
{
    <div class="alert alert-info">
        @TempData["UsuarioCadastrado"].ToString()
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-lock"></span>Login
            </div>
            <div class="panel-body">
                @*<img src="~/imgs/logo.png" alt="Sabes Que Acha" class="img-responsive center-block" />*@
                <br />

                <form id="formLogin" action="@Url.Action("Login", "Login")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label class="control-label">Login</label>
                        <input type="text" value="" class="form-control" name="u.Login" placeholder="Digite seu Login" required="required" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Senha</label>
                        <input type="password" value="" class="form-control" name="u.Senha" placeholder="Digite sua Senha" required="required" />
                    </div>
                </form>
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary pull-right btn-lg" type="submit" form="formLogin">Entrar</button>
            </div>
        </div>
    </div>
</div>